{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A contour plot of the Maungawhau volcano in New Zealand.",
    "width": 387,
    "height": 195,

  
    "data": [
      {
        "name": "volcano",
        "url": "data/contour_grid.json"
      },
      {
        "name": "contours",
        "source": "volcano",
        "transform": [
          {
            "type": "isocontour",
            "scale": {"expr": "width / datum.width"},
            "smooth": true,
            "zero": false
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "color",
        "type": "linear",
        "range": {"scheme": "blueorange"},
        "domain": {"data": "contours", "field": "contour.value"}
      }
    ],
    "legends": [
      {"stroke": "color", "symbolType": "stroke", "orient": "left"}
    ],
    "marks": [
      {
        "type": "path",
        "from": {"data": "contours"},
        "encode": {
          "enter": {
            "x": {"value": 50},
            "y": {"value": 0},
            "stroke": {"value": "#ccc"},
            "strokeWidth": {"value": 1},
            "fill": {"scale": "color", "field": "contour.value"}
          }
        },
        "transform": [
          {
            "type": "geopath",
            "field": "datum.contour"
          }
        ]
      },
      
      {
        "type": "path",
        "encode": {
          "enter": {
            "fill": {"value": "black"},
            "stroke": {"value": "black"}
          },
          "update": {
            "x": {"value": 50},
            "y": {"value": 0},
            "path": {"value": "L0,195 L193,0 L387,195 L0,195"},
            "opacity": {"value": 1},
            "strokeWidth": {"value": 1},
            "fillOpacity": {"value": 0}
        }
      }}
      ,
      {
        "type": "text",
        "encode": {
          "enter": {
            "fill": {"value": "#000"},
            "text": {"value": "Model 2"}
          },
          "update": {
            "opacity": {"value": 1},
            "x": {"value": 0},
            "y": {"value": 195},
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "text",
        "encode": {
          "enter": {
            "fill": {"value": "#000"},
            "text": {"value": "Model 3"}
          },
          "update": {
            "opacity": {"value": 1},
            "x": {"value": 195},
            "y": {"value": 0},
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "text",
        "encode": {
          "enter": {
            "fill": {"value": "#000"},
            "text": {"value": "Model 2"}
          },
          "update": {
            "opacity": {"value": 1},
            "x": {"value": 450},
            "y": {"value": 195},
            "fontWeight": {"value": "bold"}
          }
        }
      }
    ]
  }