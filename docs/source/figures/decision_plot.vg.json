{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Cumulative Line Graph of Shapley Values for Each Individual with Expected Value and Ordered Columns.",
  "width": 500,
  "height": 500,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {"Column": "Age", "Shapley_Value": -0.6932834614, "individual": 1},
        {"Column": "Workclass", "Shapley_Value": 0.0160077181, "individual": 1},
        {"Column": "Education-Num", "Shapley_Value": 0.1593687901, "individual": 1},
        {"Column": "Age", "Shapley_Value": -0.8932834614, "individual": 2},
        {"Column": "Workclass", "Shapley_Value": 0.020077181, "individual": 2},
        {"Column": "Education-Num", "Shapley_Value": 0.33687901, "individual": 2}
      ]},
    {
      "name": "data_agg",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Column"],
          "fields": ["Shapley_Value"],
          "ops": ["average"],
          "as": ["avg_Shapley_Value"]
        },
        {
          "type": "collect",
          "sort": {
            "field": "avg_Shapley_Value",
            "order": "descending"
          }
        },
        {
          "type": "window",
          "sort": {"field": "avg_Shapley_Value", "order": "descending"},
          "ops": ["row_number"],
          "as": ["rank"]
        }
      ]
    },
    {
      "name": "data_sorted",
      "source": "table",
      "transform": [
              {
        "type": "lookup",
        "from": "data_agg",
        "key": "Column",
        "fields": ["Column"],
  "values": ["rank"],
        "as": ["rank"]
      },
        {
          "type": "window",
          "sort":  {"field": "rank", "order": "ascending"},
          "groupby": ["individual"],
          "ops": ["sum"],
          "fields": ["Shapley_Value"],
          "as": ["cumulative_sum"],
          "frame": [null, 0]
        },
          {"type": "formula", "as": "cumulative_sum_expected_value", "expr": "datum.cumulative_sum - .5"},
        {
          "type": "formula",
          "expr": " datum.cumulative_sum_expected_value - datum.Shapley_Value",
          "as": "start"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "yscale",
      "type": "band",
      "domain": {"data": "table", "field": "Column"},
      "range": "height",
      "paddingInner": 0.1
    },
    {
      "name": "xscale",
      "type": "linear",
      "domain": {
        "data": "data_sorted",
        "fields": ["start", "cumulative_sum_expected_value"]
      },
      "range": "width",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "data_sorted", "field": "cumulative_sum_expected_value"},
      "range": {"scheme": "viridis"}
    }
  ],
  "axes": [
    {"orient": "left", "scale": "yscale", "title": "Column"},
    {"orient": "bottom", "scale": "xscale", "title": "Shapley Value"}
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "individualSeries",
          "data": "data_sorted",
          "groupby": "individual"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "individualSeries"},
          "encode": {
            "enter": {
              "x": {"scale": "xscale", "field": "start"},
              "x2": {"scale": "xscale", "field": "cumulative_sum_expected_value"},
              "y": {"scale": "yscale", "field": "Column", "band": 0.5},
              "stroke": {"scale": "color", "field": "cumulative_sum_expected_value"},
              "strokeWidth": {"value": 2}
            }
          }
        }
      ]
    }
  ]
}
