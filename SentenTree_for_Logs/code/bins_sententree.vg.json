{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 1600,
  "height": 800,
  "padding": 5,

  "signals": [
    {"name": "numGraphs", "value": 3},
    {"name": "graphWidth", "update": "(width - 50 - (numGraphs - 1) * 50) / numGraphs"},
    {"name": "graphHeight", "value": 400},
    {"name": "hoveredNodeID", "value": null, "on": [
      {"events": "symbol:mouseover", "update": "datum.id"},
      {"events": "symbol:mouseout", "update": "null"}
    ]}
  ],

  "scales": [
    {
      "name": "x",
      "domain": [0, 10],
      "range": [0, {"signal": "graphWidth"}]
    },
    {
      "name": "y",
      "domain": [0, 10],
      "range": [0, {"signal": "graphHeight"}]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [true, false],
      "range": ["red", "blue"]
    }
  ],

  "data": [
    {
      "name": "nodes",
      "values": []
    },
    {
      "name": "edges",
      "values": []
    },
    {
      "name": "facet_data",
      "source": "nodes",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["graph"]
        }
      ]
    }
  ],

  "marks": [
    {
      "type": "group",
      "from": {"data": "facet_data"},
      "encode": {
        "enter": {
          "x": {"signal": "(datum.graph - 1) * (graphWidth + 50)"},
          "y": {"value": 0},
          "width": {"signal": "graphWidth"},
          "height": {"signal": "graphHeight"}
        }
      },
      "signals": [
        {
          "name": "graph_name",
          "update": "parent.graph_name"
        }
      ],
      "data": [
        {
          "name": "graph_nodes",
          "source": "nodes",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.graph === parent.graph"
            }
          ]
        },
        {
          "name": "graph_edges",
          "source": "edges",
          "transform": [
            {
              "type": "lookup",
              "from": "graph_nodes",
              "key": "id",
              "fields": ["source"],
              "as": ["sourceNode"]
            },
            {
              "type": "lookup",
              "from": "graph_nodes",
              "key": "id",
              "fields": ["target"],
              "as": ["targetNode"]
            },
            {
              "type": "formula",
              "as": "sourceX",
              "expr": "datum.sourceNode && datum.sourceNode.x ? datum.sourceNode.x : 0"
            },
            {
              "type": "formula",
              "as": "sourceY",
              "expr": "datum.sourceNode && datum.sourceNode.y ? datum.sourceNode.y : 0"
            },
            {
              "type": "formula",
              "as": "targetX",
              "expr": "datum.targetNode && datum.targetNode.x ? datum.targetNode.x : 0"
            },
            {
              "type": "formula",
              "as": "targetY",
              "expr": "datum.targetNode && datum.targetNode.y ? datum.targetNode.y : 0"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "rule",
          "from": {"data": "graph_edges"},
          "encode": {
            "enter": {
              "x": {"scale": "x", "field": "sourceX"},
              "y": {"scale": "y", "field": "sourceY"},
              "x2": {"scale": "x", "field": "targetX"},
              "y2": {"scale": "y", "field": "targetY"},
              "strokeWidth": {"field": "weight"},
              "stroke": {"value": "black"}
            },
            "update": {
              "stroke": [
                {"test": "datum.source === hoveredNodeID || datum.target === hoveredNodeID", "value": "blue"},
                {"value": "black"}
              ],
              "strokeWidth": {"field": "weight"}
            }
          }
        },
        {
          "type": "symbol",
          "from": {"data": "graph_nodes"},
          "encode": {
            "enter": {
              "x": {"scale": "x", "field": "x"},
              "y": {"scale": "y", "field": "y"},
              "size": {"field": "count", "mult": 100},
              "stroke": {"value": "steelblue"},
              "strokeWidth": {"value": 2},
              "fill": {"scale": "color", "field": "exemplar"}
            },
            "update": {
              "fill": [
                {"test": "datum.id === hoveredNodeID", "value": "blue"},
                {"value": "steelblue"}
              ],
              "stroke": [
                {"test": "datum.id === hoveredNodeID", "value": "blue"},
                {"value": "steelblue"}
              ]
            }
          }
        },
        {
          "type": "text",
          "from": {"data": "graph_nodes"},
          "encode": {
            "enter": {
              "x": {"scale": "x", "field": "x", "offset": 10},
              "y": {"scale": "y", "field": "y", "offset": -10},
              "text": {"field": "label_id"},
              "fontSize": {"field": "count", "mult": 10},
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "fill": {"value": "black"}
            },
            "update": {
              "fill": [
                {"test": "datum.id === hoveredNodeID", "value": "blue"},
                {"value": "black"}
              ]
            }
          }
        }
      ]
    }
  ],

  "legends": [
    {
      "fill": "color",
      "title": "Exemplar",
      "orient": "right",
      "encode": {
        "symbols": {
          "enter": {
            "shape": {"value": "circle"},
            "size": {"value": 100}
          }
        }
      }
    }
  ]
}
