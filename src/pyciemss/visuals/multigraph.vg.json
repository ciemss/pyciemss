{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A node-link diagram with force-directed layout, depicting character co-occurrence in the novel Les Mis√©rables.",
  "width": 300,
  "height": 300,
  "padding": 0,
  "autosize": "none",

  "signals": [
    {"name": "cx", "update": "width / 2" },
    {"name": "cy", "update": "height / 2" },
    {"name": "nodeRadius", "value": 40},
    {"name": "nodeCharge", "value": -30},
    {"name": "linkDistance", "value": 30}
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "node-attributions", "field": "attributions"},
      "range": {"scheme": "category20"}
    }
  ],

  "marks": [
    {
      "name": "nodes",
      "type": "group",
      "from": {
          "facet": {
              "data": "node-attributions",
              "name": "node-facets",
              "groupby": "id"
          }
      },
      "data": [
        {"name": "arcs",
         "source": "node-facets",
         "transform": [
            {
              "type": "pie",
              "field": "weight",
              "startAngle": 0,
              "endAngle": 6.29,
              "sort": true
            }
          ]
        }
      ],
      "marks": [
          {
            "type": "arc",
            "from": {
              "data": "arcs"
            },
            "encode": {
              "enter": {
                "x": {"field": "x"},
                "y": {"field": "y"},
                "fill": {"scale": "color", "field": "attributions"},
                "startAngle": {"field": "startAngle"},
                "endAngle": {"field": "endAngle"},
                "innerRadius": {"value": 10},
                "outerRadius": {"value": 20}
              }
            }
          }
        ]
    },
    {
      "type": "path",
      "interactive": false,
      "from": {"data": "link-data"},
      "transform": [
        {
          "type": "linkpath",
          "require": {"signal": "position"},
          "shape": "line",
          "sourceX": "datum.source.x", "sourceY": "datum.source.y",
          "targetX": "datum.target.x", "targetY": "datum.target.y"
        }
      ],
      "name": "paths",
      "encode": {
        "update": {
          "stroke": {"value": "#ccc"},
          "strokeWidth": {"value": 0.5}
        }
      }
    }
  ],
 
  "data": [
      {
        "name": "node-data",
        "values": [
          {"id": 0, "attributions": ["A", "B","D"]},
          {"id": 1, "attributions": ["B", "C"]},
          {"id": 2, "attributions": ["C"]},
          {"id": 3, "attributions": ["C"]}, 
          {"id": 4, "attributions": ["C"]},
          {"id": 5, "attributions": ["C"]},
          {"id": 6, "attributions": ["D"]}
        ]
      },
      {
        "name": "link-data",
        "values": [
          {"id": 1, "source": 0, "target": 1, "attributions": ["A", "B"]},
          {"id": 2, "source": 0, "target": 2, "attributions": ["B", "C"]},
          {"id": 3, "source": 0, "target": 3, "attributions": ["A", "C"]},
          {"id": 4, "source": 0, "target": 4, "attributions": ["D"]},
          {"id": 5, "source": 0, "target": 5, "attributions": ["D"]},
          {"id": 6, "source": 0, "target": 6, "attributions": ["D"]}
        ]
      },
      {
        "name": "position",
        "source": "node-data",
        "transform": [
          {
            "type": "force",
            "iterations": 300,
            "signal": "position",
            "forces": [
              {"force": "center", "x": {"signal": "cx"}, "y": {"signal": "cy"}},
              {"force": "collide", "radius": {"signal": "nodeRadius"}},
              {"force": "nbody", "strength": {"signal": "nodeCharge"}},
              {"force": "link", "links": "link-data", "distance": {"signal": "linkDistance"}}
            ]
          }
        ]
      },
      {
        "name": "node-attributions",
        "source": "position",
        "transform": [
          {"type": "flatten", 
          "fields": ["attributions"]
          },
          {
            "type": "formula",
            "as": "weight",
            "expr": "1"
          }
        ]
      }
    ] 
}
