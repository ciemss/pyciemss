{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Cumulative Line Graph of Shapley Values for Each Individual with Expected Value and Ordered variables.",
  "width": 500,
  "height": 500,
  "padding": 5,
  "scales": [
    {
      "name": "yscale",
      "type": "band",
      "domain": {
        "data": "data_sorted",
        "field": "variable",
        "sort": {"field": "rank", "op": "min", "order":"descending"}
      },
      "range": "height",
      "paddingInner": 0.1
    },
    {
      "name": "xscale",
      "type": "linear",
      "domain": {
        "data": "data_sorted",
        "fields": ["start", "cumulative_sum_expected_value"]
      },
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "data_sorted", "field": "avg_shapley_value"},
      "range": {"scheme": "viridis"}
    }
  ],
  "axes": [
    {"orient": "left", "scale": "yscale", "title": "variable"},
    {"orient": "bottom", "scale": "xscale", "title": "Shapley Value"},
    {"orient": "top", "scale": "xscale", "title": "Shapley Value"}
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "individualSeries",
          "data": "data_sorted",
          "groupby": "individual"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "individualSeries"},
          "encode": {
            "enter": {
              "x": {"scale": "xscale", "field": "cumulative_sum_expected_value"},
              "x2": {"scale": "xscale", "field": "cumulative_sum_expected_value"},
              "y": {"scale": "yscale", "field": "variable", "band": 0.5},
              "stroke": {"scale": "color", "field": "avg_shapley_value"},
              "strokeWidth": {"value": 2}
            }
          }
        }
      ]
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {"variable": "Age", "shapley_value": -5.932834614, "individual": 1, "expected_value": 0.5},
        {"variable": "Workclass", "shapley_value": 0.0160077181, "individual": 1, "expected_value": 0.5},
        {"variable": "Education-Num", "shapley_value": 0.1593687901, "individual": 1, "expected_value": 0.5},
        {"variable": "Age", "shapley_value": 0.8932834614, "individual": 2, "expected_value": 0.5},
        {"variable": "Workclass", "shapley_value": 0.020077181, "individual": 2, "expected_value": 0.5},
        {"variable": "Education-Num", "shapley_value": -0.33687901, "individual": 2, "expected_value": 0.5},
        {"variable": "Age", "shapley_value": 0.5232834614, "individual": 3, "expected_value": 0.5},
        {"variable": "Workclass", "shapley_value": 0.0180077181, "individual": 3, "expected_value": 0.5},
        {"variable": "Education-Num", "shapley_value": 0.2503687901, "individual": 3, "expected_value": 0.5},
        {"variable": "Age", "shapley_value": -0.7832834614, "individual": 4, "expected_value": 0.5},
        {"variable": "Workclass", "shapley_value": 0.022077181, "individual": 4, "expected_value": 0.5},
        {"variable": "Education-Num", "shapley_value": 0.43987901, "individual": 4, "expected_value": 0.5}
      ]
    },
    {
      "name": "data_agg",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["variable"],
          "fields": ["shapley_value"],
          "ops": ["average"],
          "as": ["avg_shapley_value"]
        },
        {
          "type": "formula",
          "expr": "abs(datum.avg_shapley_value)",
          "as": "abs_avg_shapley_value"
        },
        {
          "type": "collect",
          "sort": {
            "field": "abs_avg_shapley_value",
            "order": "descending"
          }
        },
        {
          "type": "window",
          "sort": {"field": "abs_avg_shapley_value", "order": "ascending"},
          "ops": ["row_number"],
          "as": ["rank"]
        }
      ]
    },
    {
      "name": "data_sorted",
      "source": "table",
      "transform": [
        {
          "type": "lookup",
          "from": "data_agg",
          "key": "variable",
          "fields": ["variable"],
          "values": ["rank", "avg_shapley_value"],
          "as": ["rank", "avg_shapley_value"]
        },
        {
          "type": "window",
          "sort": {"field": "rank", "order": "ascending"},
          "groupby": ["individual"],
          "ops": ["sum"],
          "fields": ["shapley_value"],
          "as": ["cumulative_sum"],
          "frame": [null, 0]
        },
        {
          "type": "formula",
          "as": "cumulative_sum_expected_value",
          "expr": "datum.cumulative_sum - datum.expected_value"
        },
        {
          "type": "formula",
          "expr": "datum.cumulative_sum_expected_value - datum.shapley_value",
          "as": "start"
        },
        {
          "type": "collect",
          "sort": {"field": "rank"}
        }
      ]
    }
  ]  
}
